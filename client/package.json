  "name": "thermal-analyzer",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next export",
    "build:static": "npm run build && npm run export",
    "preelectron:build": "npm run build:static && node ./scripts/copy-backend.js",
    "electron:dev": "npm run build:static && electron .",
    "electron:build": "npm run preelectron:build && electron-builder"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
