  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "fs-extra": "^11.2.0"
  },
  "build": {
    "appId": "com.example.thermalanalyzer",
    "productName": "Thermal Analyzer",
    "directories": {
      "output": "dist_electron",
      "app": "."
    },
    "files": [
      "main.js",
      "out/**/*",
      "package.json",
      {
        "from": "dist_backend_temp/thermal_api",
        "to": "server_executable_build/thermal_api"
      }
    ],
    "asarUnpack": [
      "server_executable_build/thermal_api/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
